<Page x:Class="RevitTemplate.View.EntryPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RevitTemplate.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Padding="65">
        <StackPanel Margin="-55,0,0,0">
            <Label Content="E-Mail:" FontWeight="Bold" />
            <TextBox x:Name="txtAttendee" Height="24" Margin="20,0,0,20" Width="225" HorizontalAlignment="Left"/>
            <Label Content="Mot de passe:" FontWeight="Bold" ></Label>
            <PasswordBox x:Name="txtTicketCont" Height="24" Margin="20,0,0,0" Width="225" HorizontalAlignment="Left"/>
            <CheckBox Content="CheckBox" IsChecked="{Binding CheckboxEntryPage, Mode=TwoWay}" />
        </StackPanel>
    </Border>
</Page>
